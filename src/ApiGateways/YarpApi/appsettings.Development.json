{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "YarpProxy": {
    "Routes": {
      "command-service-api": {
        "ClusterId": "command-api",
        "Match": {
          "Path": "/command/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "query-service-api": {
        "ClusterId": "query-api",
        "Match": {
          "Path": "/query/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "command-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6010/"
          }
        }
      },
      "query-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6020/"
          }
        }
      }
    }
  }
}